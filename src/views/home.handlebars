<div class="container-fluid">
  <div class="row">
    <div class="col g-0">
      <div class="bg-image"></div>

      <div class="contenedorTituloPrincipal">
        <a href="/home"><img src="/images/logo.png" alt="logo" style="width: 300px;" /></a>
        <h5 class="tituloPrincipal mt-2">HAMBURGUESAS FROM ARG</h5>
        {{#if firstName}}
          <div class="d-flex justify-content-center align-items-center user">
            <h5 class="text-white mt-1">
              Bienvenido,
              {{firstName}}. Tu ESTADO es
              {{role}}
            </h5>
            <a href="/purchases" class="btn btn-outline-light ms-3"><i class="bi bi-bag-check me-2"></i>Mis compras</a>
            <a href="/api/sessions/currentUser" class="btn btn-outline-light ms-3 me-3"><i
                class="bi bi-person-circle"
              ></i></a>
            <a href="/api/sessions/logout" class="btn btn-danger btn-sm btnLogin ms-1 me-4">
              <i class="bi bi-box-arrow-left me-2"></i>Logout
            </a>
          </div>
          <div class="wrapper">
            <ul class="mt-3 ms-3 menuContainer">
              <li class="mt-3 ms-3 menuItem"><a href="/products" class="btn btn-outline-light"><i
                    class="bi bi-basket2-fill me-2"
                  ></i>PRODUCTOS</a></li>
              <li class="mt-3 ms-3 menuItem"><a href="/test-chat" class="btn btn-outline-light"><i
                    class="bi bi-chat-dots me-2"
                  ></i>CHAT WEBSOCKET</a></li>
              <li class="mt-3 ms-3 menuItem"><a href="/users" class="btn btn-outline-light"><i
                    class="bi bi-people-fill me-2"
                  ></i>USUARIOS</a></li>
              <li class="mt-3 ms-3 menuItem"><a href="/products-admin" class="btn btn-outline-light"><i
                    class="bi bi-person-workspace me-2"
                  ></i>ADMINISTRADOR DE PRODUCTOS</a></li>
            </ul>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>